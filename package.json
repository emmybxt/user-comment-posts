{
  "name": "user-posts",
  "version": "1.0.0",
  "description": "A REST API server that lets user create posts and comments",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 16.15",
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  },
  "scripts": {
    "build:mix": "swc src -d dist & tsc --pretty --skipLibCheck --noEmit",
    "build:tsc": "tsc",
    "build": "swc src -d dist",
    "test": "jest --verbose --maxWorkers=1 --forceExit",
    "start": "node dist/index.js",
    "dev": "tsc -w & nodemon dist/index.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "jira-prepare-commit-msg",
      "pre-push": "yarn lint && yarn build:mix && yarn test"
    }
  },
  "jest-junit": {
    "outputDirectory": "./test-reports/",
    "outputName": "junit.xml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmybxt/user-comment-posts.git"
  },
  "author": "Ire Olaniyan",
  "license": "ISC",
  "homepage": "https://github.com/emmybxt/user-comment-posts#readme",
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.26",
    "@swc/helpers": "^0.4.14",
    "@swc/jest": "^0.2.24",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.8",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.21.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "^4.3.8",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "jira-prepare-commit-msg": "^1.6.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/lodash": "^4.14.197",
    "app-root-path": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-openapi": "^12.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "pg-promise": "^11.5.4",
    "winston": "^3.8.1"
  }
}
