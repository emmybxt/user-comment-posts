{
  "name": "user-posts",
  "version": "1.0.0",
  "description": "A REST API server that lets user create posts and comments",
  "main": "index.js",
  "scripts": {
    "build:mix": "swc src -d dist & tsc --pretty --skipLibCheck --noEmit",
    "build:tsc": "tsc",
    "build": "swc src -d dist",
    "start": "node dist/index.js",
    "ci": "jest --ci --verbose  --reporters=default --reporters=jest-junit",
    "dev": "yarn build:mix & node dist/index.js",
    "lint": "eslint . --ext .ts --fix",
    "test": "jest --verbose"
  },
  "repository": {
    "type": "git"
  },
  "license": "ISC",
  "homepage": "https://github.com/emmybxt/user-comment-posts#readme",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "prepare-commit-msg": "jira-prepare-commit-msg",
      "pre-push": "yarn lint && yarn build:mix"
    }
  },
  "jest-junit": {
    "outputDirectory": "./test-reports/",
    "outputName": "junit.xml"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.26",
    "@swc/helpers": "^0.4.14",
    "@swc/jest": "^0.2.24",
    "@types/app-root-path": "^1.2.4",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jest": "^28.1.6",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.164",
    "@types/morgan": "^1.9.2",
    "@types/newrelic": "^9.4.0",
    "@types/node": "^16",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.21.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "husky": "^4.3.8",
    "jest": "^29.6.4",
    "jest-junit": "^14.0.0",
    "jira-prepare-commit-msg": "^1.6.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.3",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@hapi/joi-date": "^2.0.1",
    "@types/pg": "^8.10.2",
    "app-root-path": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "ioredis": "^5.2.2",
    "joi": "^17.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "rate-limiter-flexible": "^2.2.2",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "yup": "^0.32.9"
  }
}
